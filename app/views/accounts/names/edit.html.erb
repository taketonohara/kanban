<div class="card col-sm-10 mt-5 mx-auto px-0">
  <div class="card-header">
    <H3>名前を変更する</h3>
  </div>
  <div class="card-body">
    <%= form_with(model: @profile, url: account_name_path, method: :put, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name, "名前", :class => "form-label" %>
      <%= form.text_field :name, :class => "form-control" %>
    </div>
 
    <div class="actions float-right">
      <%= link_to 'キャンセル' , account_path, :class => "btn btn-light" %>
      <%= form.submit "名前更新", :class => "btn btn-primary" %>
    </div>
  </div>
  <% end %>
</div>